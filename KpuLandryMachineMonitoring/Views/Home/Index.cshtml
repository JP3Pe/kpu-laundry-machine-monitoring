@model IEnumerable<KpuLandryMachineMonitoring.Models.StudentUseState>
@{
    ViewData["Title"] = "Home Page";
}

<section id="user-list">
    @foreach (var studentUseState in Model)
    {
        <article class="user">
            @* 아이콘 삽입 위치 *@
            @* 건조기 여부 판별 *@
            @* @if (MariaDBService.IsDryerMachine(studentUseState.MachineID)) *@
            @* { *@
            <img src="~/images/landry_machine.svg" alt="landry machine image"/>
            @* } *@
            @* else *@
            @* { *@
            @* <img src="~/images/dryer_machine.svg" alt="dryer machine image"/> *@
            @* } *@
            <h2 class="user-name">@studentUseState.Name</h2>
            <p class="user-room-number">@(studentUseState.RoomNumber)호</p>
            <article class="user-phone-number-container">
                <p class="user-phone-number">@studentUseState.PhoneNumber[0]</p>
                <p class="user-phone-number">@studentUseState.PhoneNumber[3]</p>
                <p class="user-phone-number">@studentUseState.PhoneNumber[6]</p>
            </article>
            <article class="user-time-container">
                <p class="user-time">@studentUseState.StartTime</p>
                <p class="user-time">@studentUseState.EndTime</p>
            </article>
        </article>
    }
</section>